<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/black"
    android:layout_height="match_parent"
    tools:context=".Activity.ProductDetail">

    <ScrollView
        android:layout_width="match_parent"
        android:id="@+id/scrollView_1"
        android:padding="10dp"
        android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp">
                    <com.google.android.exoplayer2.ui.PlayerView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:use_controller="true"
                        android:id="@+id/player"
                        app:player_layout_id="@layout/exo_player_view"
                        app:controller_layout_id="@layout/custom_controller"/>
                    <ProgressBar
                        android:layout_width="80dp"
                        android:layout_centerInParent="true"
                        android:id="@+id/progress_bar"
                        android:layout_height="80dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/image_Film1"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:src="@drawable/cat_background"
                        android:transitionName="sharedName" />
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="90dp"
                        android:transitionName="sharedName"
                        android:id="@+id/image_Film"
                        android:src="@drawable/backgroundimage"
                        android:layout_height="150dp"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên phim"
                    android:textSize="25sp"
                    android:id="@+id/tvnameofFilm"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content"
                    android:text="Thể loại"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:id="@+id/rv_category_film"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mô tả"
                    android:textSize="25sp"
                    android:textColor="@color/white"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:padding="10dp"
                    android:text="rewgtregergwergwergwergwergerg"
                    android:id="@+id/tv_describe_film"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:id="@+id/imgAddFavoriteFilm"
                        android:src="@drawable/ic_baseline_favorite_24"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_marginStart="50dp"
                        android:layout_marginEnd="50dp"
                        android:src="@drawable/ic_baseline_add_24"
                        android:layout_height="wrap_content"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:src="@drawable/ic_baseline_share_24"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Danh sách các tập"
                        android:textSize="23sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:id="@+id/rv_list_Ep"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Diễn viên"
                        android:textSize="23sp"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>
                    <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_marginTop="10dp"
                        android:id="@+id/rv_list_Cast"
                        android:layout_height="wrap_content"/>
                </LinearLayout>



            </LinearLayout>
    </ScrollView>

</LinearLayout>